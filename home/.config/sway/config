    tap enabled                # Ativa toque para clique
    natural_scroll disabled    # Rolagem natural (como no celular)
    dwt enabled                # Desativa o touchpad enquanto  (como no celular)digita
    middle_emulation enabled   # Emula bot√£o do meio com clique de dois bot√µes
    pointer_accel 0.5          # Ajusta acelera√ß√£o do cursor (0 = nenhuma)
    scroll_method two_finger   # Usa dois dedos para rolar
}

